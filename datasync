if __name__ == "__main__":
    print("STARTING PYTHON SCRIPT", os.linesep)
    errdirs = syncall()
    if errdirs:
        print("Error Dirs:", os.linesep, errdirs, file=sys.stderr)
        print(os.linesep, "{} ERRORS".format(len(errdirs)), os.linesep, sep="", file=sys.stderr)
