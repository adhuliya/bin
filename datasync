#!/bin/bash

DIR=/home/codeman/mydata/bin-git
cd $DIR
echo -e "\n$>>> $DIR\n"
git fetch origin master ;
git merge origin/master ;
git add --all ;
git commit -m 'automated-update' ;
git push origin master ;

DIR=/home/codeman/mydata/configs-git
cd $DIR
echo -e "\n$>>> $DIR\n"
git fetch origin master ;
git merge origin/master ;
git add --all ;
git commit -m 'automated-update' ;
git push origin master ;

DIR=/home/codeman/mydata/mynotes-git
cd $DIR
echo -e "\n$>>> $DIR\n"
git fetch origin master ;
git merge origin/master ;
git add --all ;
git commit -m 'automated-update' ;
git push origin master ;
